                android:layout_width="317dp"
                android:layout_height="181dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="O espinafre cresce melhor em regiões com temperaturas mais baixas, a temperatura ideal de cultivo é a que vária entre 13°C e 20°C. Temperaturas mais elevadas podem fazer a planta florescer precocemente."
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imageView9"
                app:layout_constraintEnd_toEndOf="@+id/imageView9"
                app:layout_constraintStart_toStartOf="@+id/imageView9"
                app:layout_constraintTop_toBottomOf="@+id/textView15" />

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="385dp"
                android:layout_height="239dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="64dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView9"
                app:srcCompat="@drawable/texto" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="315dp"
                android:layout_height="32dp"
                android:layout_marginTop="8dp"
                android:text="Luminosidade"
                android:textAlignment="center"
                android:textColor="#00FF00"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/imageView15"
                app:layout_constraintStart_toStartOf="@+id/imageView15"
                app:layout_constraintTop_toTopOf="@+id/imageView15" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="317dp"
                android:layout_height="171dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text=" O espinafre pode ser cultivado com luz solar direta ou em sombra parcial. Em regiões de clima quente, escolha o local de cultivo de forma que a planta não fique exposta a luz solar direta durante as horas mais quentes do dia. "
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imageView15"
                app:layout_constraintEnd_toEndOf="@+id/imageView15"
