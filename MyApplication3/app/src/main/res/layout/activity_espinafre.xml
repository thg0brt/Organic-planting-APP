            <TextView
                android:id="@+id/textView24"
                android:layout_width="313dp"
                android:layout_height="32dp"
                android:layout_marginTop="8dp"
                android:text="Plantio"
                android:textAlignment="center"
                android:textColor="#00FF00"
                android:textSize="28sp"
