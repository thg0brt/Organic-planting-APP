                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/imageView8"
                app:layout_constraintStart_toStartOf="@+id/imageView8"
                app:layout_constraintTop_toTopOf="@+id/imageView8" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="317dp"
                android:layout_height="290dp"
                android:layout_marginTop="8dp"
                android:text="O tomateiro se desenvolve melhor em climas com temperaturas que variam entre 20°C e 26°C durante o dia e com uma variação de tempertura durante a noite. Obs:Lembrando que ele não suporta temperaturas extremas, nem muito quentes, nem muito frias."
